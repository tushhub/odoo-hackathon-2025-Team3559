@model List<StackIt.Models.Answer>

@if (Model != null && Model.Any())
{
    foreach (var ans in Model.OrderByDescending(a => a.CreatedAt))
    {
        <div class="card mb-3 p-3">
            <div class="answer-body">
                @Html.Raw(ans.Content)
            </div>
            <small class="text-muted">
                Answered by <strong>@ans.User.UserName</strong> on @ans.CreatedAt.ToString("dd MMM yyyy hh:mm tt")
            </small>
        </div>
    }
}
else
{
    <p>No answers yet. Be the first!</p>
}
