

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - StackIt</title>

    <!-- CSS Bundles -->
    @Styles.Render("~/Content/css")
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet" />

    <!-- Modernizr -->
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("StackIt", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Ask Question", "Ask", "Question", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Questions", "Index", "Question", null, new { @class = "nav-link" })
                    </li>
                </ul>

                <!-- 🔔 Notifications -->
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="fas fa-bell"></i>
                                @if (ViewBag.UnreadCount > 0)
                                {
                                    <span class="badge bg-danger">@ViewBag.UnreadCount</span>
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                @{
                                    Html.RenderPartial("_NotificationsPartial", ViewBag.Notifications as List<StackIt.Models.Notification>);
                                }


                            </ul>
                        </li>
                        @Html.Partial("_LoginPartial")
                    </ul>
                }
                else
                {
                    @Html.Partial("_LoginPartial")
                }

            </div>
        </div>
    </nav>

    <div class="container body-content mt-3">
        @RenderBody()

        <hr />
        <footer class="text-muted">
            <p>&copy; @DateTime.Now.Year - StackIt Q&A Platform</p>
        </footer>
    </div>

    <!-- JS Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    @RenderSection("scripts", required: false)
</body>
</html>













